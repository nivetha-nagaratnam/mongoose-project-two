<%- include('../partials/header') %>

<section>
  <div>Title: </div>
  <div><%= product.title %></div>
  <div>Brand: </div>
  <div><%= product.brand %></div>
  <div>Dupes: </div>
  <div><%= product.dupe %></div>
  <div>Description: </div>
  <div><%= product.description %></div>
  <div>Colour: </div>
  <div><%= product.colour %></div>
  <div>Price: </div>
  <div><%= product.price %></div>
  <div>Ratings: </div>
  <div><%= product.rating %></div>
</section>

<br><br><h3>Images <a href="/products/<%= product._id %>/images/new">ADD IMAGE</a></td></h3>
    <hr> 
    
    <h1>Uploaded Images</h1> 
    <div> 
      <% product.img.forEach(function(image) { %>  
        <div> 
            <div> 
                <img src="data:image/<%=image.img.contentType%>;base64, 
                <%=image.img.data.toString('base64')%>"> 
            </div> 
        </div> 
        <% }) %> 
    </div>  

<br><br><h2>Reviews</h2>
<form method="POST"
  action="/products/<%= product._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="0">0</option>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (product.review.length) { %>
  <table>
    <thead>
      <tr>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% product.review.forEach(function(r) { %>
        <tr>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>
